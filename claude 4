import { contractors } from '../data/contractors';
import ContractorCard from '../components/ContractorCard';

export default function ContractorsPage() {
  return (
    <div className="container mx-auto px-4 py-8">
      <h1 className="text-3xl font-bold mb-6">Contractors</h1>
      
      <div className="bg-white p-6 rounded-xl shadow-sm border mb-6">
        <div className="relative">
          <input 
            type="text" 
            placeholder="Search contractors by name, category, or location..."
            className="w-full pl-10 pr-4 py-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-[#127C87]/30"
          />
          <svg 
            className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" 
            width="20" height="20" viewBox="0 0 24 24" fill="none"
          >
            <path d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" 
              stroke="currentColor" strokeWidth="2" strokeLinecap="round"
            />
          </svg>
        </div>
        
        <div className="mt-4 flex flex-wrap gap-2">
          <span className="text-sm font-medium">Categories:</span>
          <button className="text-sm px-3 py-1 rounded-full bg-[#127C87] text-white">All</button>
          <button className="text-sm px-3 py-1 rounded-full bg-gray-100 hover:bg-gray-200">Plumbing</button>
          <button className="text-sm px-3 py-1 rounded-full bg-gray-100 hover:bg-gray-200">Electrical</button>
          <button className="text-sm px-3 py-1 rounded-full bg-gray-100 hover:bg-gray-200">Roofing</button>
        </div>
      </div>
      
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {contractors.map(contractor => (
          <ContractorCard key={contractor.id} contractor={contractor} />
        ))}
      </div>
    </div>
  );
}

