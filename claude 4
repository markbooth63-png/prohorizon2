Step 1: Create the Professionals Card Component
bash
 
# First, make sure the components directory exists
mkdir -p app/components

# Create the ProfessionalCard.tsx file with content
cat > app/components/ProfessionalCard.tsx << 'EOF'
import { Professional } from '../data/professionals';

export default function ProfessionalCard({ professional }: { professional: Professional }) {
  return (
    <div className="bg-white rounded-xl shadow-sm border overflow-hidden hover:shadow-md transition-shadow">
      {professional.image ? (
        <div className="h-40 bg-gray-200 overflow-hidden">
          <img src={professional.image} alt={professional.name} className="w-full h-full object-cover" />
        </div>
      ) : (
        <div className="h-40 bg-gray-200 flex items-center justify-center text-gray-400">
          No image available
        </div>
      )}
      
      <div className="p-4">
        <div className="flex justify-between items-start">
          <h3 className="font-bold text-lg">{professional.name}</h3>
          <span className="text-gray-500">{professional.hourlyRate}</span>
        </div>
        
        <div className="text-sm text-gray-600 mt-1">
          {professional.city}
        </div>
        
        <div className="flex items-center gap-1 mt-2">
          <div className="text-[#FFC629]">‚òÖ</div>
          <span className="font-medium">{professional.rating}</span>
          <span className="text-gray-500 text-sm">({professional.reviews} reviews)</span>
        </div>
        
        <div className="flex flex-wrap gap-2 mt-3">
          {professional.badges.map((badge) => (
            <span 
              key={badge} 
              className="text-xs px-2 py-1 bg-[#FFC629]/10 text-[#FFC629] rounded-full"
            >
              {badge}
            </span>
          ))}
        </div>
        
        <button className="w-full mt-4 bg-[#FFC629] hover:bg-[#e6b325] text-black py-2 rounded-lg font-medium">
          View Profile
        </button>
      </div>
    </div>
  );
}
