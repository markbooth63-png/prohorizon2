import type { Metadata } from 'next';
import { Inter } from 'next/font/google';
import './globals.css';

const inter = Inter({ subsets: ['latin'] });

export const metadata: Metadata = {
  title: 'ProHorizons - Find Trusted Professionals',
  description: 'Find trusted pros for any home project',
};

export default function RootLayout({
  children,
}: Readonly<{
  children: React.ReactNode;
}>) {
  return (
    <html lang="en">
      <body className={inter.className}>
        <header className="bg-white border-b border-gray-200 py-4">
          <div className="container mx-auto px-4 flex justify-between items-center">
            <a href="/" className="flex items-center gap-2">
              <div className="w-10 h-10 rounded-lg bg-gradient-to-r from-[#127C87] to-[#FFC629] flex items-center justify-center text-white font-bold">
                PH
              </div>
              <div className="font-extrabold text-xl">
                <span className="text-[#127C87]">Pro</span>
                <span className="text-[#FFC629]">Horizons</span>
              </div>
            </a>
            <nav className="hidden md:flex gap-6">
              <a href="/" className="text-gray-700 hover:text-[#127C87]">Home</a>
              <a href="/contractors" className="text-gray-700 hover:text-[#127C87]">Contractors</a>
