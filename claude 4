Now edit the ContractorCard component:

bash
 
open -a TextEdit app/components/ContractorCard.tsx

Add this content:

tsx
 
import { Contractor } from '../data/contractors';

export default function ContractorCard({ contractor }: { contractor: Contractor }) {
  return (
    <div className="bg-white rounded-xl shadow-sm border overflow-hidden hover:shadow-md transition-shadow">
      {contractor.image ? (
        <div className="h-40 bg-gray-200 overflow-hidden">
          <img src={contractor.image} alt={contractor.name} className="w-full h-full object-cover" />
        </div>
      ) : (
        <div className="h-40 bg-gray-200 flex items-center justify-center text-gray-400">
          No image available
        </div>
      )}
      
      <div className="p-4">
        <div className="flex justify-between items-start">
          <h3 className="font-bold text-lg">{contractor.name}</h3>
          <span className="text-gray-500">{contractor.priceTier}</span>
        </div>
        
        <div className="text-sm text-gray-600 mt-1">
          {contractor.city}
        </div>
        
        <div className="flex items-center gap-1 mt-2">
          <div className="text-[#127C87]">‚òÖ</div>
          <span className="font-medium">{contractor.rating}</span>
          <span className="text-gray-500 text-sm">({contractor.reviews} reviews)</span>
        </div>
        
        <div className="flex flex-wrap gap-2 mt-3">
          {contractor.badges.map((badge) => (
            <span 
              key={badge} 
              className="text-xs px-2 py-1 bg-[#127C87]/10 text-[#127C87] rounded-full"
            >
              {badge}
            </span>
          ))}
        </div>
        
        <button className="w-full mt-4 bg-[#127C87] hover:bg-[#0e636c] text-white py-2 rounded-lg font-medium">
          View Details
        </button>
      </div>
    </div>
  );
}

