ðŸ“„ components/Results.tsx
tsx
 
import React from 'react';

interface Business {
  name: string;
  rating: number;
  verified: boolean;
  reviews: number;
}

interface ResultsProps {
  businesses: Business[];
  categoryName?: string;
}

export function Results({ businesses, categoryName }: ResultsProps) {
  if (!businesses || businesses.length === 0) {
    return <p>No contractors found. Please try a different search.</p>;
  }

  return (
    <div className="results-container">
      <h2>{categoryName ? `${categoryName} Contractors` : 'Contractors'}</h2>
      <p>{businesses.length} contractors found</p>
      
      <div className="results-grid">
        {businesses.map((business, index) => (
          <div key={index} className="business-card">
            <h3>{business.name}</h3>
            <div className="business-details">
              <div className="rating">
                <span className="stars">{"â˜…".repeat(Math.floor(business.rating))}</span>
                <span className="rating-number">{business.rating}</span>
                <span className="reviews">({business.reviews} reviews)</span>
              </div>
              {business.verified && <span className="verified-badge">âœ“ Verified</span>}
            </div>
            <button className="contact-button">Contact</button>
          </div>
        ))}
      </div>
    </div>
  );
}

ðŸ“„ components/Search.tsx
tsx
 
'use client';

import React, { useState } from 'react';
import { Results } from './Results';
import data from '@/data.json';

interface SearchProps {
  categories: string[];
  locations: { [zipcode: string]: { name: string; active: boolean } };
}

export function Search({ categories, locations }: SearchProps) {
  const [selectedCategory, setSelectedCategory] = useState('');
  const [selectedLocation, setSelectedLocation] = useState('');
  const [searchResults, setSearchResults] = useState<any[]>([]);
  const [isSearched, setIsSearched] = useState(false);

  const handleSearch = (e: React.FormEvent) => {
    e.preventDefault();
    
    if (selectedCategory && data.contractors[selectedCategory]) {
      setSearchResults(data.contractors[selectedCategory].businesses || []);
      setIsSearched(true);
    } else {
      setSearchResults([]);
      setIsSearched(true);
    }
  };

  const formatCategory = (category: string) => {
    return category.replace(/_/g, ' ')
      .split(' ')
      .map(word => word.charAt(0).toUpperCase() + word.slice(1))
      .join(' ');
  };

  return (
    <>
      <div className="search-container">
        <h2>Find Trusted Contractors</h2>
        <form onSubmit={handleSearch}>
          <div className="search-fields">
            <div className="field">
              <label htmlFor="category">Service Type</label>
              <select 
                id="category" 
                value={selectedCategory} 
                onChange={(e) => setSelectedCategory(e.target.value)}
                required
              >
                <option value="">Select a service</option>
                {categories.map((category) => (
                  <option key={category} value={category}>
                    {formatCategory(category)}
                  </option>
                ))}
              </select>
            </div>
            
            <div className="field">
              <label htmlFor="location">Location</label>
              <select 
                id="location" 
                value={selectedLocation} 
                onChange={(e) => setSelectedLocation(e.target.value)}
                required
              >
                <option value="">Select your city</option>
                {Object.entries(locations).map(([zipcode, location]) => (
                  location.active && (
                    <option key={zipcode} value={zipcode}>
                      {location.name}
                    </option>
                  )
                ))}
              </select>
            </div>
            
            <button type="submit" className="search-button">Find Contractors</button>
          </div>
        </form>
      </div>
      
      {isSearched && (
        <Results 
          businesses={searchResults}
          categoryName={selectedCategory ? formatCategory(selectedCategory) : ''}
        />
      )}
    </>
  );
}

ðŸ“„ app/page.tsx
tsx
 
import { Search } from '@/components/Search';
import data from '@/data.json';

export default function Home() {
  const categories = Object.keys(data.contractors);
  
  return (
    <>
      <Search 
        categories={categories} 
        locations={data.cities} 
      />
    </>
  );
}

